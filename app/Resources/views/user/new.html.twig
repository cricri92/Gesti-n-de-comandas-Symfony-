{% extends 'dashboard/layout.html.twig' %}
{%  form_theme form 'form_row.html.twig' %}

{% block panel_heading %}Registro de usuarios{% endblock %}
{% block panel_body %}

    {{ form_start(form) }}
        {{ form_row(form.username) }}
        {{ form_row(form.email) }}
        {{ form_row(form.roles) }}
        {{ form_row(form.plainPassword.first) }}
        {{ form_row(form.plainPassword.second) }}

        <div class="form-group">
            <div>
                <a  href="{{ path('user_index') }}" class="btn btn-default">Volver al listado</a>
                <button type="submit" class="btn btn-default">Crear cuenta</button>
            </div>
        </div>
    {{ form_end(form) }}

{% endblock %}
