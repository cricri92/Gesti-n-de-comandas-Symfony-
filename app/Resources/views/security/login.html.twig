{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="row">
        <div class="well col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4 form-login-div">
            <h3>Ingreso al Sistema</h3>
            <form action="{{ path('security_login_check') }}" method="post">
                <div class="form-group">
                    <input type="text" id="username" name="_username" placeholder="Usuario" value="{{ last_username }}" class="form-control"/>
                </div>
                <div class="form-group">
                    <input type="password" id="password" name="_password" placeholder="ContraseÃ±a" class="form-control" />
                </div>
                <input type="hidden" name="_target_path" value="dashboard_index" />
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <button type="submit" class="btn btn-default">Ingresar</button>
            </form>
        </div>
    </div>
{% endblock %}
